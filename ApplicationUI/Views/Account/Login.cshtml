@model UserLoginViewModel
   
<div class="login_container">

    
    <form asp-action="Login" method="post" class="LoginForm">

        <div>
            <p class="form_title">Sign In</p>
        </div>


        <div>
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <input asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email"></span>
            </div>

            <div>
                <input asp-for="Password" type="password"  placeholder="Password"/>
                <span asp-validation-for="Password"></span>
            </div>

            <div style="display:flex;flex-direction:row;justify-content:center;align-items:center;color:#808080; width :100%;height:40px">
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe"  />
                <span asp-validation-for="RememberMe"></span>
            </div>

        </div>
        <div>
            <input class="form_btn" type="submit" value="Sign In" />
        </div>

    </form>
</div>
